# ğŸ”„ Gerenciamento de containers
alias dps="docker ps"                 # Listar containers em execuÃ§Ã£o
alias dpsa="docker ps -a"              # Listar todos os containers
alias dimg="docker images"             # Listar imagens
alias drm="docker rm -f"               # Remover container
alias drmi="docker rmi -f"             # Remover imagem
alias dstop="docker stop"              # Parar container
alias dstart="docker start"            # Iniciar container

# ğŸ“‚ FunÃ§Ã£o para copiar arquivos entre host e container
dcp() {
  if [[ $# -ne 3 ]]; then
    echo "Uso: dcp <container> <origem> <destino>"
    echo "Exemplo (copiar do container para o host): dcp meu-container /arquivo.txt ."
    echo "Exemplo (copiar do host para o container): dcp meu-container arquivo.txt /destino/"
    return 1
  fi

  local container="$1"
  local origem="$2"
  local destino="$3"

  docker cp "$container:$origem" "$destino" 2>/dev/null || docker cp "$origem" "$container:$destino"
}

# ğŸš€ Criando e rodando containers rapidamente
alias drun="docker run --rm -it"       # Executar container temporÃ¡rio interativo
alias drund="docker run -d --rm"       # Executar container temporÃ¡rio em background

# ğŸ” InspeÃ§Ã£o e logs
alias dlogs="docker logs -f"           # Ver logs do container
alias dexec="docker exec -it"          # Entrar no container
alias dinspect="docker inspect"        # Inspecionar container/imagem

# ğŸ—‘ï¸ Limpeza
alias dsprune="docker system prune -af" # Remover imagens, containers e volumes nÃ£o usados
alias dvprune="docker volume prune -f"  # Remover volumes nÃ£o usados

# ğŸ“¦ Docker Compose
alias dcd="docker compose down"        # Derrubar serviÃ§os
alias dcb="docker compose build"       # Construir imagens do compose
alias dcr="docker compose restart"     # Reiniciar serviÃ§os do compose
alias dcl="docker compose logs -f"     # Ver logs de um serviÃ§o

# âš¡ FunÃ§Ã£o para `docker compose up -d` com arquivo especÃ­fico
dcu() {
  local file="${1:-docker-compose.yml}"
  shift
  docker compose -f "$file" up -d "$@"
}
